<p id="notice"><%= notice %></p>

<div class="center-block" style="width: 80%">
<table class="table">
<tr>
  <th>First name:</th>
  <td><%= @volunteer.first_name %></td>
</tr>

<tr>
  <th>Last name:</th>
  <td><%= @volunteer.last_name %></td>
</tr>

<tr>
  <th>Contact number:</th>
  <td><%= @volunteer.contact_number %></td>
</tr>

<tr>
  <th>Notes:</th>
  <td><%= @volunteer.notes %></td>
</tr>

<tr>
 	<th>Choosen time slots:</th>
 	<td>
 	<ul>
 	<% @volunteer.blocks.each do |block| %>
 		<% confirmed = block.confirmations.find{|c| c.volunteer == @volunteer}.confirmed %>
 		<li <% if confirmed %> class="bold" <% end %>><%= format_block(block) %> <% if confirmed %> (Confirmed Visit) <% end %></li>
 	<% end %>
 	</ul>
 	</td>
 </tr>
</table>

<div class="text-center">
<%= link_to 'Edit ' + @volunteer.first_name + '\'s Schedule', edit_volunteer_path(@volunteer), :class => 'btn btn-default' %> 
<%= link_to 'Back to All Volunteers', volunteers_path, :class => 'btn btn-default' %>
</div>

</div>
