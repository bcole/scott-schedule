<h1>Listing volunteers</h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Contact number</th>
      <th>Notes</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.first_name %></td>
        <td><%= volunteer.last_name %></td>
        <td><%= volunteer.contact_number %></td>
        <td><%= volunteer.notes %></td>
        <td>
          <%= link_to 'Details', volunteer, :class => "btn btn-default" %>
          <%= link_to 'Edit', edit_volunteer_path(volunteer), :class => "btn btn-default" %>
          <%= link_to 'Destroy', volunteer, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

